              <text class="cu-tag round bg-green sm">父亲</text>
            </view>
          </view>
          <view class="source-item flex">
            <view class='source-user flex flex-direction justify-center align-center'>
              <view class="cu-avatar round" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10002.jpg);"></view>
              <view class='text-gray text-xs'>大强</view>
            </view>
