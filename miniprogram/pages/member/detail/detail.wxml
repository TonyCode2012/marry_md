        </swiper-item>
        <swiper-item wx:if="{{userInfo.photos.length==0}}" bindtap="ViewImage" data-url="{{userInfo.wechat_info.avatarUrl}}">
          <image class='response' src="{{userInfo.wechat_info.avatarUrl}}" mode="aspectFill"></image>
        </swiper-item>
      </swiper>
