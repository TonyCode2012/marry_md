          </view>
          <view class="source-item flex">
            <view class='source-user flex flex-direction justify-center align-center'>
              <view class="cu-avatar round" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10003.jpg);"></view>
              <view class='text-gray text-xs'>谢广坤</view>
            </view>
            <view class='source-connection'>
              <view class='source-line'></view>
              <text class="cu-tag round bg-green sm">儿子</text>
            </view>
          </view>
          <view class="source-item flex">
            <view class='source-user flex flex-direction justify-center align-center'>
              <view class="cu-avatar round" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10004.jpg);"></view>
              <view class='text-gray text-xs'>我</view>
            </view>
          </view>
        </view>
      </scroll-view>

    </view>

