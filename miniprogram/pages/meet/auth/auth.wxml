      <button bindtap='gotoUser' class='cu-btn bg-black button-hover round btn-auth'>完善信息</button>
    </view>
    <view class="padding">
      <button bindtap='gotoAuthCorp' class='cu-btn bg-green button-hover round btn-auth'>认证公司</button>
    </view>
  </view>
</view>